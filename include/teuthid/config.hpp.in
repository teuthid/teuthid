@typedef_uint64_t@
@typedef_uint128_t@

@typedef_intptr_t@
@typedef_uintptr_t@

@typedef_float_16_t@
@typedef_float_32_t@
@typedef_float_64_t@
@typedef_float_80_t@
@typedef_float_128_t@
typedef mpfr_t float256_t;

} // namespace teuthid
#endif // DOXYGEN_SHOULD_SKIP_THIS

#endif // TEUTHID_CONFIG_HPP
